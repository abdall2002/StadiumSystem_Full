@if (Model > 0 && User.IsInRole("Admin"))
{
    <li class="nav-item">
        <a class="nav-link position-relative" asp-controller="Reservation" asp-action="Manage" title="Pending Reservations">
            <i class="bi bi-bell" style="font-size: 1.3rem;"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                @Model
                <span class="visually-hidden">pending reservations</span>
            </span>
        </a>
    </li>
}
